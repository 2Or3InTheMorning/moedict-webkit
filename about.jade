    script.
        document.addEventListener('deviceready', function(){
            $('body').addClass('app');
            $('body').removeClass('web');
            $('body').on("click", "a.home", function(){
                if (history.length > 1) { history.go(-1); return false; } else { location.href = './' }
            });
            $('body').on("click", "a[target]", function(){
                var href = $(this).attr('href');
                window.open(href, '_system');
                return false;
            });
        });
